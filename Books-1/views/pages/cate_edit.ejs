<h2>CATE</h2>

<form action="" method="POST">
        <div class="form-group">
          <label for="exampleInputEmail1">Title</label>
          <input value="<%- cate.name %>" type="text" name="txtTitle" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter title">
        </div>
        <div class="form-group">
          <label for="exampleInputEmail1">Order</label>
          <input value="<%- cate.ordering %>" type="text" name="txtOrder" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter order">
        </div>
        <div class="form-group form-check">
          <input <% if(cate.active==true){ %> checked <% } %> type="checkbox" name="chkActive" class="form-check-input" id="exampleCheck1">
          <label class="form-check-label" for="exampleCheck1">Show/Hide</label>
        </div>

        <button type="submit" name="btnAddCategory" class="btn btn-primary">Edit category</button>
</form>

