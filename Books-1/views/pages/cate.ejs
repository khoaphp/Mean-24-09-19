<h2>CATE</h2>

<form action="" method="POST">
        <div class="form-group">
          <label for="exampleInputEmail1">Title</label>
          <input type="text" name="txtTitle" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter title">
        </div>
        <div class="form-group">
          <label for="exampleInputEmail1">Order</label>
          <input type="text" name="txtOrder" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter order">
        </div>
        <div class="form-group form-check">
          <input type="checkbox" name="chkActive" class="form-check-input" id="exampleCheck1">
          <label class="form-check-label" for="exampleCheck1">Show/Hide</label>
        </div>

        <button type="submit" name="btnAddCategory" class="btn btn-primary">Add new category</button>
</form>

<div class="row">
        <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Basic Table</h4>
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Order</th>
                                        <th>Title</th>
                                        <th>Ordering</th>
                                        <th>Active</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% cates.forEach(function(cate){ %>

                                    
                                    <tr>
                                        <td><%- cate._id %></td>
                                        <td><%- cate.name %></td>
                                        <td><%- cate.ordering %></td>
                                        <td>
                                            <% if(cate.active==true){ %>
                                                <i class="far fa-circle text-success"></i>
                                            <% }else{ %>
                                                <i class="far fa-circle text-danger"></i>
                                            <% } %>

                                        </td>
                                        <td>
                                                <button onClick="window.location='./cate/edit/<%- cate._id %>'" type="button" class="btn waves-effect waves-light btn-success">
                                                    Sửa
                                                </button>

                                                <button onClick="
                                                
                                                var chon = confirm('Are you sure you want to delelte?');
                                                if(chon){
                                                    window.location='./cate/delete/<%- cate._id %>'
                                                }
                                                
                                                " type="button" class="btn waves-effect waves-light btn-danger">
                                                    Xóa</button>
                                        </td>
                                    </tr>
                                    <% }); %>
                                    
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
</div>